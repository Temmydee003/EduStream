@using Microsoft.AspNetCore.Identity
@using CRUDApplication.Areas.Identity.Data

@inject SignInManager<CRUDApplicationUser> SignInManager
@inject UserManager<CRUDApplicationUser> UserManager


<ul class="navbar-nav" id="nav-bar">
@if (SignInManager.IsSignedIn(User))
{
       <li class="nav-item"> <!-- Adjust the column width as needed (e.g., col-md-6, col-md-4, etc.) -->
            <a id="manage" class="nav-link text-dark header-nav" title="Manage">Hello @UserManager.GetUserName(User)!</a>
@*            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>*@
        </li>
        <li class="nav-item header-nav">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="login-submit" type="submit" class="btn btn-outline-warning header-nav">Log Out</button>
            </form>
        </li>
}

